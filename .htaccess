# Brian Investments Loan System
# Apache Configuration for Production

# ============================================================
# HTTPS REDIRECT (Uncomment for production)
# ============================================================
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ============================================================
# SECURITY HEADERS
# ============================================================
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Remove PHP version header
    Header unset X-Powered-By

    # Uncomment when HTTPS is configured:
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# ============================================================
# PROTECT SENSITIVE FILES
# ============================================================
<FilesMatch "^(config\.php|config\.production\.php|db_connect\.php|\.env|\.htaccess)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protect log files
<FilesMatch "\.(log|sql|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# ============================================================
# PROTECT DIRECTORIES
# ============================================================
# Disable directory listing
Options -Indexes

# Protect includes directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^config/ - [F,L]
</IfModule>

# ============================================================
# FILE UPLOAD SECURITY
# ============================================================
# Prevent PHP execution in uploads folder
<Directory "uploads">
    <FilesMatch "\.php$">
        Order Allow,Deny
        Deny from all
    </FilesMatch>
</Directory>

# ============================================================
# PHP SETTINGS (if allowed by hosting)
# ============================================================
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/php_errors.log
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
    php_value post_max_size 10M
    php_value upload_max_filesize 5M
</IfModule>

# ============================================================
# COMPRESSION (for performance)
# ============================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# ============================================================
# CACHING (for performance)
# ============================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
